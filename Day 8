cout << "1 Suma\n";
cin >> opcion;
clrscr();
switch(opcion)
{
case 1:
cout << "Suma\n\n";
cout << "Ingresar cantidad de numeros:";
cin >> tnum;
while(i < tnum)
{
cout << "Ingresar numero:";
cin >> num;
j = j + num;
i = i + 1;
}
cout<<"La suma de los numeros es:" << j;
break;
}
getch();
}
